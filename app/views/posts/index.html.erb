<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <p class="alert alert-success"><%= notice %></p>

      <h1>Posts</h1>

      <div id="posts">
        <% @posts.each do |post| %>
          <div class="card mb-3">
            <div class="card-body">
              <%= render post %>
              <p>
                <%= link_to "Ver este post", post, class: "btn btn-primary" %>
              </p>
            </div>
          </div>
        <% end %>
      </div>

      <%= link_to "Crear nuevo post", new_post_path, class: "btn btn-success" %>
    </div>
  </div>
</div>